{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "npm start",
      "program": "${workspaceFolder}/src/server/server.ts",
      "runtimeArgs": [
        "-r", "dotenv/config",
        "-r", "ts-node/register",
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js",
      ],
      "preLaunchTask": "build:dev",
      "console": "integratedTerminal",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "npm test",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--no-cache",
      ],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "test",
        "LOGGER_LEVEL": "debug",
        "LOGGER_PRETTY": "true",
      }
    },
  ]
}
